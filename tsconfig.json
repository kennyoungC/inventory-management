{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["app/ui/components/*"],
            "@/actions/*": ["app/lib/actions/*"],
            "@/types/*": ["app/lib/types/*"],
            "@/utils/*": ["app/utils/*"],
            "@/models/*": ["app/lib/models/*"],
            "@/data/*": ["app/lib/data/*"],
            "@/transformers/*": ["app/lib/transformers/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
